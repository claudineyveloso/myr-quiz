<div class="front-container">
  <section id="content" class="content">
    <div class="w-100 min-vh-100 d-flex flex-column align-items-center justify-content-center">
      <div class="content__wrap">
        <div class="text-center">
          <%= image_tag 'marca-myr-pdf.png', class: "img-fluid h-100 mb-30 w-270", data: { aos: "fade-down", aos_duration: "3000" }, alt: "Myr-tech" %>
        </div>
        <div class="card shadow-lg">
          <div class="card-body p-4">
            <div class="text-center">
              <h1 class="h3 color-myr-tech">Login da conta</h1>
              <p class="fs-0-85rem">FacÌ§a login para ter acesso aos dados e respostas <br /> da plataforma ESGSolutions.</p>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'mt-4' } ) do |f| %>
              <div class="mb-3">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
              </div>
              <div class="mb-3">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Senha", class: "form-control" %>
              </div>
              <% if devise_mapping.rememberable? %>
                <div class="form-check">
                  <input id="_dm-loginCheck" class="form-check-input" type="checkbox">
                    <%= f.label :remember_me, for: "_dm-loginCheck", class: "fs-0-85rem form-check-label" %>
                  </div>
              <% end %>
              <div class="d-grid mt-5">
                <%= f.submit "Acessar", class: "btn btn-primary btn-lg btn-login" %>
              </div>
            <% end %>

            <div class="d-flex justify-content-between gap-md-5 mt-4">
              <%= render "devise/shared/links" %>
            </div>
            <div class="d-flex align-items-center justify-content-center gap-3 mt-4">
              <button class="btn btn-light" onclick="window.history.back()">Voltar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
